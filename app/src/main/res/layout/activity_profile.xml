<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="6dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.example.oluwatobi.jagos.ProfileActivity">

    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="200dp"
        android:layout_height="220dp"
        android:src="@drawable/before_cookie"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/anyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="#000000"
        tools:text="bolaji"
        android:textAlignment="center"
        android:layout_marginBottom="15dp"
        android:layout_below="@id/profilePic"/>

    <TextView
        android:id="@+id/urlTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="Github URL"
        android:textAlignment="center"
        android:layout_below="@id/anyName"
        android:layout_marginBottom="9dp"/>

    <TextView
        android:id="@+id/url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Visit Github page"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_marginBottom="15dp"
        android:onClick="visitURL"
        android:layout_below="@id/urlTitle"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share_button"
        android:onClick="share"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
